<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <center>
      <div class="bg-sky-800 w-full p-6 min-h-screen">
        <h2 class="text-2xl font-bold mb-6" style="color: white">
          Form Add Transactions
        </h2>
        <p></p>
        <br />

        <div class="overflow-x-auto bg-sky-700 rounded-lg shadow-lg w-1/2">
          <div class="bg-white p-6 rounded-lg shadow-lg">
            <h3 class="text-2xl font-semibold text-sky-700 mb-6">
              Add New Transaction
            </h3>
            <form action="/transaction/add" method="POST">
              <!-- Course Name -->
              <div class="mb-4">
                <label class="block text-sm font-medium text-black">Date</label>
                <input
                  type="date"
                  id="categories"
                  name="date"
                  required
                  class="mt-1 p-3 w-full border border-sky-300 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 placeholder-grey"
                      value="<%= data.date ? data.date.toISOString().split('T')[0] : '' %>"
                />
              </div>

              <div class="mb-4">
                <label class="block text-sm font-medium text-black"
                  >Description</label
                >
                <input
                  type="text"
                  name="description"
                  value="<%= data.description %>"
                  required
                  class="mt-1 p-3 w-full border border-sky-300 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 placeholder-grey"
                />
              </div>

              <div class="mb-4">
                <label class="block text-sm font-medium text-black">Type</label>
                <select
                  name="type"
                  class="mt-1 p-3 w-full border border-sky-300 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 placeholder-grey"
                >
                <option value="income" <%= data.type === 'income' ? 'selected' : '' %>>Income</option>
                <option value="expense" <%= data.type === 'expense' ? 'selected' : '' %>>Expense</option>
                </select>
              </div>

              <div class="mb-4">
                <label class="block text-sm font-medium text-black"
                  >Amount</label
                >
                <input
                  type="number"
                  name="amount"
                  value="<%= data.amount %>"
                  required
                  class="mt-1 p-3 w-full border border-sky-300 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 placeholder-grey"
                />
              </div>
              <div class="mb-4">
                <label class="block text-sm font-medium text-black"
                  >Category</label
                >
                <select
                  name="CategoryId"
                  class="mt-1 p-3 w-full border border-sky-300 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 placeholder-grey"
                >
                  <% category.forEach(el => { %>
                  <option value="<%= el.id %>"><%= el.name %></option>
                  <% }) %>
                </select>
              </div>
              <div class="mb-4">
                <label class="block text-sm font-medium text-black">User</label>
                <select
                  name="UserId"
                  class="mt-1 p-3 w-full border border-sky-300 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-500 focus:border-sky-500 placeholder-grey"
                >
                  <% user.forEach(el=> { %>
                  <option selected value="<%= el.id %>">
                    <%= el.Department.name %>
                  </option>
                  <% }) %>
                </select>
              </div>

              <!-- Submit Button -->
              <button
                type="submit"
                class="w-full py-3 bg-sky-500 text-white rounded-md hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-sky-500 focus:ring-offset-2"
              >
                Submit
              </button>
            </form>
          </div>
        </div>
        <br />
        <!-- Back Button -->
        <a href="/transaction/<%= id %>"
          ><button
            class="mt-4 px-6 py-2 bg-gray-600 text-white font-semibold rounded-lg shadow hover:bg-gray-500"
          >
            Back
          </button></a
        >
        <br /><br />
      </div>
    </center>
  </body>
</html>
